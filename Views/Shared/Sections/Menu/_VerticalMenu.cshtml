

@{
    TempData.Keep();
    string? currentPage = ViewContext.HttpContext.Request.Path;
}


<!-- Menu -->
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
    <div class='app-brand demo @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
        <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
            <span class="app-brand-logo demo me-1"> @await Html.PartialAsync("../_Partials/_Macros")</span>
            <span class="app-brand-text demo menu-text fw-semibold ms-2">Dashboard</span>
        </a>
        <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
            <i class="mdi menu-toggle-icon d-xl-block align-middle mdi-20px"></i>
        </a>
    </div>

    <div class="menu-inner-shadow"></div>

    <ul class="menu-inner py-1">
        <!-- Dashboards -->
        <li class='menu-item@(currentPage.EndsWith("/") || currentPage.StartsWith("/Dashboards") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons mdi mdi-home-outline"></i>
                <div>Dashboards</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage == "/" ? " active" : "")'>
                    <a asp-area="Customer" asp-controller="Dashboards" asp-action="Index" class="menu-link">
                        <div>Analytics</div>
                    </a>
                </li>
            </ul>
        </li>

        @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))
        {
            <!-- Category -->
            <li class='menu-item@(currentPage.StartsWith("/Admin/Category") ? " active open" : "")'>
                <a href="javascript:void(0);" class="menu-link menu-toggle">
                    <i class="menu-icon tf-icons mdi mdi-window-maximize"></i>
                    <div>Category</div>
                </a>
                <ul class="menu-sub">
                    <li class='menu-item@(currentPage.StartsWith("/Admin/Category") ? " active" : "")'>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="menu-link">
                            <div>List</div>
                        </a>
                    </li>
                </ul>
            </li>

            <!-- Company -->
            <li class='menu-item@(currentPage.StartsWith("/Admin/Company") ? " active open" : "")'>
                <a href="javascript:void(0);" class="menu-link menu-toggle">
                    <i class="menu-icon tf-icons mdi mdi-window-maximize"></i>
                    <div>Company</div>
                </a>
                <ul class="menu-sub">
                    <li class='menu-item@(currentPage.StartsWith("/Admin/Company") ? " active" : "")'>
                        <a asp-area="Admin" asp-controller="Company" asp-action="Index" class="menu-link">
                            <div>List</div>
                        </a>
                    </li>
                </ul>
            </li>

            <!-- Product -->
            <li class='menu-item@(currentPage.StartsWith("/Admin/Product") ? " active open" : "")'>
                <a href="javascript:void(0);" class="menu-link menu-toggle">
                    <i class="menu-icon tf-icons mdi mdi-window-maximize"></i>
                    <div>Product</div>
                </a>
                <ul class="menu-sub">
                    <li class='menu-item@(currentPage.StartsWith("/Admin/Product") ? " active" : "")'>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="menu-link">
                            <div>List</div>
                        </a>
                    </li>
                </ul>
            </li>
        }

        <!-- Order -->
        <li class='menu-item@(currentPage.StartsWith("/Admin/Order") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons mdi mdi-window-maximize"></i>
                <div>Order</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage.StartsWith("/Admin/Order") ? " active" : "")'>
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="menu-link">
                        <div>Order Lists</div>
                    </a>
                </li>
            </ul>
        </li>
        

        <li class="menu-header fw-medium mt-4">
            <span class="menu-header-text">Apps &amp; Pages</span>
        </li>

        @* <!-- Layouts -->
        <li class='menu-item@(currentPage.StartsWith("/Category") ? " active open" : "")'>
            <a href="javascript:void(0);" class="menu-link menu-toggle">
                <i class="menu-icon tf-icons mdi mdi-window-maximize"></i>
                <div>Category</div>
            </a>
            <ul class="menu-sub">
                <li class='menu-item@(currentPage.StartsWith("/Category") ? " active" : "")'>
                    <a asp-controller="Category" asp-action="Index" class="menu-link">
                        <div>List</div>
                    </a>
                </li>
            </ul>
        </li> *@

    </ul>
</aside>
<!-- / Menu -->
